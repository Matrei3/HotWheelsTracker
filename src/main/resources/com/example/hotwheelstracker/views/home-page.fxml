<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1280.0" stylesheets="@../css/inputs.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotwheelstracker.Controller.HomePageController">
   <children>
      <TextField fx:id="carFilterer" layoutX="14.0" layoutY="523.0" promptText="Car Name" />
      <TableView fx:id="carsTable" layoutX="14.0" layoutY="111.0" prefHeight="377.0" prefWidth="818.0">
        <columns>
          <TableColumn fx:id="tableColumnYear" prefWidth="87.0" resizable="false" text="Year" />
          <TableColumn fx:id="tableColumnModelName" minWidth="0.0" prefWidth="219.0" resizable="false" text="Model Name" />
            <TableColumn fx:id="tableColumnSeries" prefWidth="187.0" resizable="false" text="Series" />
            <TableColumn fx:id="tableColumnSeriesNumber" prefWidth="75.0" resizable="false" text="Series No." />
            <TableColumn fx:id="tableColumnImage" prefWidth="361.0" resizable="false" text="Image" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button layoutX="186.0" layoutY="523.0" mnemonicParsing="false" onAction="#addCarToCollection" text="Add selected car to collection" />
      <TableView fx:id="userCarsTable" layoutX="897.0" layoutY="111.0" prefHeight="377.0" prefWidth="358.0">
        <columns>
          <TableColumn fx:id="tableColumnYearUser" prefWidth="39.0" resizable="false" text="Year" />
          <TableColumn fx:id="tableColumnModelNameUser" prefWidth="111.0" resizable="false" text="Name" />
            <TableColumn fx:id="tableColumnSeriesUser" prefWidth="113.0" resizable="false" text="Series" />
            <TableColumn fx:id="tableColumnSeriesNumberUser" prefWidth="45.0" resizable="false" text="No." />
            <TableColumn fx:id="tableColumnImageUser" prefWidth="48.0" resizable="false" text="Image" />
        </columns>
      </TableView>
      <Label layoutX="1025.0" layoutY="64.0" text="Your cars">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <Button layoutX="1057.0" layoutY="523.0" mnemonicParsing="false" onAction="#deleteCarFromCollection" text="Delete selected car" />
      <TextField fx:id="searchCarField" layoutX="897.0" layoutY="523.0" promptText="Search User Cars" />
      <Label layoutX="371.0" layoutY="64.0" text="Car Table">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
